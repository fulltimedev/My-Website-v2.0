<% var rootPath = '../../'; %>
<!DOCTYPE HTML>
<html>
    <head>
        <%- include(rootPath + 'partials/includes'); %>
    </head>
    <body>
        <%- include(rootPath + 'partials/nav'); %>
        <link rel="stylesheet" type="text/css" href="css/page.css"/>

        <div class="back">
            <div class="cenMain">

               <!-- <div class="center cenX">
                     <h1 class="titleMain">CONTACT</h1>
                     <h3 class="regTitle padB40">devon@devoncrawford.io</h3>
